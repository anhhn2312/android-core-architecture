<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen20dp"
    android:paddingTop="@dimen/dimen20dp"
    android:paddingEnd="@dimen/dimen20dp"
    android:paddingBottom="0dp">

    <com.andyha.coreui.base.ui.widget.textview.BaseTextView
        android:id="@+id/tvTitle"
        style="@style/FontBold.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:textSize="@dimen/text_size_20"
        android:visibility="gone"
        tools:text="Unable to connect to Title"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.60"
            android:theme="@style/DefaultNumberPickerTheme"
            android:timePickerMode="spinner" />

        <LinearLayout
            android:id="@+id/llOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen20dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:visibility="visible">

            <TextView
                android:id="@+id/btnOption1"
                style="@style/CommonButton.TextOnly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/common_btn_cancel"
                android:textSize="@dimen/text_size_14"
                tools:visibility="visible" />

            <TextView
                android:id="@id/btnOption2"
                style="@style/CommonButton.TextOnly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen30dp"
                android:layout_weight="1"
                android:text="@string/common_btn_done"
                android:textSize="@dimen/text_size_14"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>